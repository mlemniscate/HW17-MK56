<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <listener>
    <listener-class>ir.maktab.MainListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>UserPage</servlet-name>
    <servlet-class>ir.maktab.servlets.UserPage</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>AirlinePage</servlet-name>
    <servlet-class>ir.maktab.servlets.airline.AirlinePage</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>AirlineAddFlight</servlet-name>
    <servlet-class>ir.maktab.servlets.airline.AirlineAddFlight</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>UserPage</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>AirlinePage</servlet-name>
    <url-pattern>/airline</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>AirlineAddFlight</servlet-name>
    <url-pattern>/airline/add-flight</url-pattern>
  </servlet-mapping>
</web-app>
